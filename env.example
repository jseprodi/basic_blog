# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# Database
DATABASE_URL="file:./dev.db"

# Upload Configuration
UPLOAD_DIR=./public/uploads
MAX_FILE_SIZE=5242880

# Security
JWT_SECRET=your-jwt-secret-key-change-this-in-production
ENCRYPTION_KEY=your-encryption-key-change-this-in-production

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="60000"

# Development
NODE_ENV=development

# Sentry Configuration
SENTRY_DSN="your-sentry-dsn"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# PWA Push Notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# Email Configuration
EMAIL_FROM="noreply@yourblog.com"
EMAIL_FROM_NAME="Your Blog"
EMAIL_SERVICE_API_KEY="your-email-service-api-key" # SendGrid, Mailgun, etc.

# Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX" # Google Analytics 4 Measurement ID
NEXT_PUBLIC_GA_DEBUG="false" # Set to "true" for debug mode

# Application Configuration
NEXT_PUBLIC_BASE_URL="https://yourblog.com" # Production URL
NEXT_PUBLIC_SITE_NAME="Your Blog"
NEXT_PUBLIC_SITE_DESCRIPTION="A modern blog built with Next.js"

# Content Moderation
CONTENT_MODERATION_ENABLED="true"
CONTENT_MODERATION_API_KEY="your-moderation-api-key" # Optional: for external moderation services

# Caching
CACHE_MAX_AGE="300" # 5 minutes
CACHE_STALE_WHILE_REVALIDATE="600" # 10 minutes

# Security
CSP_REPORT_URI="https://yourblog.report-uri.com/r/d/csp/enforce" # Optional: CSP reporting

# Google OAuth (optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Development
NODE_ENV=development

# Sentry Configuration
SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn 