{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",

    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "setup": "node scripts/setup.js",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "analyze": "cross-env ANALYZE=true npm run build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clear-cache": "node scripts/clear-cache.js",
    "clear-cache:win": "powershell -ExecutionPolicy Bypass -File scripts/clear-cache.ps1",
    "clear-cache:bat": "scripts\\clear-cache.bat",
    "reset": "npm run clear-cache && npm run dev",
    "reset:win": "npm run clear-cache:win && npm run dev",
    "reset:bat": "npm run clear-cache:bat && npm run dev",
    "deploy:vercel": "vercel --prod",
    "deploy:build": "npm run build && npm run start",
    "db:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^6.11.0",
    "@sentry/nextjs": "^9.34.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/multer": "^2.0.0",
    "bcryptjs": "^3.0.2",
    "isomorphic-dompurify": "^2.25.0",
    "lucide-react": "^0.525.0",
    "multer": "^2.0.1",
    "next": "15.3.4",
    "next-auth": "^4.24.11",
    "prisma": "^6.11.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-quill": "^2.0.0",
    "web-vitals": "^5.0.3",
    "zod": "^3.25.69"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.3.4",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "msw": "^2.10.2",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "typescript": "^5"
  }
}
