# Production Environment Variables
# Copy this to .env.production and fill in your actual values

# Database
DATABASE_URL="your_production_database_url_here"

# NextAuth Configuration
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="your_nextauth_secret_here"

# OAuth Providers (if using)
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# Email Service (if using)
EMAIL_SERVER_HOST="your_smtp_host"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your_email_username"
EMAIL_SERVER_PASSWORD="your_email_password"
EMAIL_FROM="noreply@your-domain.com"

# File Upload (if using cloud storage)
UPLOAD_API_KEY="your_upload_api_key"
UPLOAD_API_SECRET="your_upload_api_secret"

# Analytics (optional)
GOOGLE_ANALYTICS_ID="your_ga_id"
SENTRY_DSN="your_sentry_dsn"

# Security
RATE_LIMIT_SECRET="your_rate_limit_secret"
ENCRYPTION_KEY="your_encryption_key"

# PWA
PWA_NAME="Joshua Seprodi Blog"
PWA_SHORT_NAME="JS Blog"
PWA_DESCRIPTION="Personal blog and portfolio" 